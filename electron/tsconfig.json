{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "../dist/electron",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"],
      "@/lib/*": ["../lib/*"],
      "@/types/*": ["../types/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "../node_modules"]
}
